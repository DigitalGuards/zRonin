{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true,
    "incremental": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@zronin/shared": ["./src/shared/src"],
      "@zronin/stark": ["./src/crypto/stark/src"],
      "@zronin/dilithium": ["./src/crypto/dilithium/src"]
    }
  },
  "references": [
    { "path": "./src/shared" },
    { "path": "./src/crypto/stark" },
    { "path": "./src/crypto/dilithium" },
    { "path": "./src/engine" }
  ],
  "include": [],
  "exclude": ["node_modules", "dist", "predicates", "test"]
}
